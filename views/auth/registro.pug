extends ../layout/index

block contenido
    div.py-10
        h1.text-4xl.my-10.font-extrabold.text-center.text-black Bienes 
            span.font-normal.text-secondaryText Raíces  
        h2.text-center.text-2xl.font-extrabold.text-secondaryText= pagina

        if errores 
            div(class="max-w-md mx-auto my-10")
                each error in errores
                    p.bg-red-600.text-primaryText.uppercase.text-xs.text-center.p-2.mb-1.font-bold= error.msg

        .mt-8.mx-auto.max-w-md 
            .py-8.px-4.shadow.rounded-md.bg-formBackground
                form.space-y-5(method="POST" action="/auth/registro" novalidate)
                    input(type="hidden" name="_csrf" value= csrfToken) 
                    div 
                        label.block.text-sm.uppercase.text-secondaryText.mb-3.font-bold(for="nombre") Tu Nombre
                        input#nombre.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(type="text" placeholder="Escribe tu nombre" value=(usuario && usuario.nombre ? usuario.nombre : ""))
                    div 
                        label.block.text-sm.uppercase.text-secondaryText.mb-3.font-bold(for="alias") Alias
                        input#email.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400( type="text" placeholder="Mani" value=(usuario && usuario.alias ? usuario.alias : "")) 
                    div 
                        label.block.text-sm.uppercase.text-secondaryText.mb-3.font-bold(for="fecha_nacimiento") Fecha de nacimeitno
                        input#email.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(type="date" (usuario && usuario.fecha_nacimiento ? usuario.fecha_nacimiento : "")) 
                    div 
                        label.block.text-sm.uppercase.text-secondaryText.mb-3.font-bold(for="email") Email de Registro
                        input#email.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(type="email" placeholder="Escribe tu email" value=value=(usuario && usuario.email ? usuario.email : "")) 
                    div 

                        label.block.text-sm.uppercase.text-secondaryText.mb-3.font-bold(for="password") Password
                        input#password.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(type="password" placeholder="Escribe tu password" type="password" name="password" )        
                    div 
                        label.block.text-sm.uppercase.text-secondaryText.mb-3.font-bold(for="repetir_password") Repetir password
                        input#repetir_password.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400( type="password" placeholder="Repite tu password" type="password" name="repetir_password")         
                    
                    div.flex.items-center.justify-between 
                        a.text-secondaryText.text-xs(href="/auth/login") ¿Ya tienes cuenta? Inicia Sesión
                        a.text-secondaryText.text-xs(href="/auth/olvide-password") Olvide mi Password 

                    input(class="w-full bg-action hover:bg-hoverAction text-primaryText font-bold py-3 cursor-pointer" type="submit" value="Crear cuenta")
