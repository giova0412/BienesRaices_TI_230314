div(class="bg-white shadow rounded-lg")  
    img(class="object-cover h-72 w-full" src=`/uploads/${propiedad.imagen}` alt=`imagen de la propiedad ${propiedad.titulo}`)  
    div(class="p-5 space-y-5")  
        h1(class="text-xl font-bold text-secondaryText")= propiedad.titulo 
        p(class="text-sm text-secondaryText") Habitaciones:  
            span(class="text-gray-800 font-bold")= propiedad.habitaciones  
        p(class="text-sm text-secondaryText") WC:  
            span(class="text-gray-800 font-bold")= propiedad.wc  
        p(class="text-sm text-secondaryText") Precio:  
            span(class="text-secondaryText font-bold text-xl")= propiedad.precio.nombre  
        a(href=`/propiedad/${propiedad.id}` class="bg-action w-full text-center block font-bold text-primaryText p-2 uppercase rounded hover:bg-hoverAction") Ver Propiedad 